{
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "plugins": [
        "react"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": [
            "error"
        ],
        "react/display-name": [
            "off"
        ],
        "react/prop-types": [
            "error",
            {
                "ignore": [
                    "tintColor",
                    "navigation",
                    "dispatch"
                ]
            }
        ],
        "comma-dangle": [
            2,
            "always-multiline"
        ],
        "parser": "babel-eslint"
    }
}